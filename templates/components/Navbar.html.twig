{% props menu_sections %}

<div
	data-controller="mobile-menu">
	{# Navigation #}
	<nav class="fixed top-0 left-0 w-full z-[100] bg-white/95 backdrop-blur-sm border-b border-brand-brown/10 h-16 lg:h-20">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full flex justify-between items-center">
			<div class="flex-shrink-0 flex items-center gap-2">
				<img src="{{ asset('photo_chicken/logochicken.png') }}" alt="Chicken Family" class="h-10 w-auto lg:h-12" loading="lazy"/>
				<span class="font-bungee text-xl lg:text-2xl text-brand-brown tracking-tighter uppercase">CHICKEN
					<span class="text-brand-orange">FAMILY</span>
				</span>
			</div>

			{# Liens Desktop #}
			<div class="hidden lg:flex items-center space-x-6">
				{% for section in menu_sections %}
					{# On affiche les sections principales dans la nav #}
					{% if section.id in ['poulet','kebab', 'hotdog', 'boxs', 'enfant'] %}
						<a href="#{{ section.id }}" data-controller="smooth-scroll" class="font-bold hover:text-brand-orange transition-colors text-xs uppercase tracking-widest">{{ section.navLabel|default(section.title) }}</a>
					{% endif %}
				{% endfor %}
				<a href="tel:0760568103" class="text-brand-brown font-bold text-sm">07 60 56 81 03</a>
				<a href="https://france.booqcloud.com/webshop/Order2POSChickenFamily/" target="_blank" class="bg-brand-red text-white px-6 py-2 rounded-full font-bungee text-xs hover:scale-105 transition-all shadow-lg active:scale-95 uppercase">COMMANDER</a>
			</div>

			{# Burger Mobile #}
			<button data-action="click->mobile-menu#toggle" class="lg:hidden flex items-center p-2 text-brand-brown" aria-label="Ouvrir le menu mobile">
				<svg class="w-8 h-8" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>
	</nav>

	{# Overlay Menu Mobile #}
		<div id="mobile-menu" data-mobile-menu-target="menu">
		<button data-action="click->mobile-menu#close" class="absolute top-6 right-6 text-white p-2" aria-label="Fermer le menu mobile">
			<svg class="w-10 h-10" fill="none" stroke="currentColor" viewbox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l18 18"></path>
			</svg>
		</button>
		<div class="flex flex-col items-center gap-8 text-center text-white font-bungee">
			<img src="{{ asset('photo_chicken/logochicken.png') }}" alt="Chicken Family" class="h-16 w-auto" loading="lazy"/>
			<span class="text-brand-yellow text-4xl mb-4 uppercase underline decoration-brand-orange decoration-4">La Carte</span>
			{% for section in menu_sections %}
				{% if section.id in ['poulet','kebab', 'hotdog', 'boxs', 'enfant'] %}
					<a href="#{{ section.id }}" data-controller="smooth-scroll" data-action="click->mobile-menu#close" class="text-2xl uppercase hover:text-brand-orange">{{ section.navLabel|default(section.title) }}</a>
				{% endif %}
			{% endfor %}
			<hr class="w-24 border-white/20">
			<a href="https://france.booqcloud.com/webshop/Order2POSChickenFamily/" target="_blank" class="bg-brand-red text-white px-10 py-5 rounded-full text-2xl shadow-2xl active:scale-95 transition-transform uppercase">COMMANDER EN LIGNE</a>
			<a href="tel:0760568103" class="text-brand-yellow font-bold text-xl uppercase tracking-tighter">ðŸ“ž 07 60 56 81 03</a>
		</div>
	</div>
</div>
